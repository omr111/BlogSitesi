
@{
    ViewBag.Title = "YazarinMakaleleri";
}
@using BlogSitesi.Models
@model List<Makale>

<h1>Yazara Ait Makaleler </h1>
<div class="row">
    <div class="col-md-12" style="margin-top: 20px">
        <div class="panel panel-success">
            <div class="panel-heading">
                <h3 class="panel-title">
                    Filtrele
                    <div class="pull-right">
                        <span class="clickable filter" data-toggle="tooltip" title="Arama Yap" data-container="body">
                            <i class="glyphicon glyphicon-filter"></i>
                        </span>
                    </div>
                </h3>

            </div>
            <div class="panel-body ">
                <input type="text" class="form-control" id="task-table-filter" data-action="filter" data-filters="#task-table" placeholder="Arama..." />
            </div>
            <table class="table table-hover" id="task-table">
                        <thead>
                            <tr>


                                <th>Makale Başlık</th>
                                <th>Ekleme Tarihi</th>
                                <th>Detay</th>
                                <th>Güncelle</th>
                                <th>Kilitle</th>
                           
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (Makale m in Model)
                            {

                                <tr>
                                    <td>@m.Baslik</td>
                                    <td>@m.YayinTarihi</td>
                                  
                                <td>
                                    <a href="~/Makale/Detay/@m.id" class="btn btn-info "><span class="glyphicon glyphicon-check" title="Detay"></span></a>
                                       
                                    </td>
                                    <td>
                                        <a href="/Makale/MakaleDuzenle/@m.id" class="btn btn-success btn-sm"> <span class="glyphicon glyphicon-refresh" title="Güncelle"></span></a>
                                      
                                    </td>
              

                                    <td scope="col">
                                        <a href="/Yazar/MakaleKilitle/@m.id" class="btn btn-warning kulname btn-sm">
                                            @if (m.Aktif)
                                            {
                                                <span class="fa fa-unlock" title="Kilitle"></span>
                                            }
                                            else
                                            {
                                                <span class="fa fa-lock" title="Kilidi Aç"></span>
                                            }
                                        </a>
                                    </td>


                                </tr>

                            }
                            
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
