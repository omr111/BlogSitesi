@model IEnumerable<BlogSitesi.Models.Etiket>
@using BlogSitesi.Models

<div class="widget blog-tags">
    <h5>Blog tags</h5>
    <ul>
        @foreach (Etiket e in Model)
        {
            <li><a data-id="@e.id" href="/Etiket/Index/@e.id" class="btn btn-default etiket">@e.Adi (@e.MakaleEtikets.Where(x => x.EtiketID == e.id).Count())</a></li>
        }

    </ul>
</div>
