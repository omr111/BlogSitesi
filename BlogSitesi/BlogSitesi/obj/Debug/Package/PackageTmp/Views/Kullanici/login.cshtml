@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <title>Velhasıl.net | Giriş Yap</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="Doğru,güvenilir,yerinden bilgilerle ufkunuzu genişletmek,bilginize bilgi katmak için sizinleyiz.">
       
    <meta name="keywords" content="velhasıl,blog,gezi,teknoloji,web tasarım,bilgi,tasarım,bakım,güzellik,makyaj,donanım,travel" />
    <meta name="robots" content="Ayha, restoran, yemek, mantı, lezzet, taze, doğal, kahvaltı" />
    <meta name="googlebot" content="velhasıl,blog,gezi,teknoloji,web tasarım,bilgi,tasarım,bakım,güzellik,makyaj,donanım,travel" " />

    <!--===============================================================================================-->
    <link rel="icon" type="image/png" href="/Content/js/vendor/logIn/image/icons/favicon.ico" />

    <!--===============================================================================================-->

    <link href="~/Content/css/bootstrap.min.css" rel="stylesheet" />
    <!--===============================================================================================-->


    <link href="~/Content/js/vendor/logIn/css/util.css" rel="stylesheet" />

    <link href="~/Content/js/vendor/logIn/css/main.css" rel="stylesheet" />
    <!--===============================================================================================-->
</head>
<body>

    <div class="limiter">
        <div class="container-login100">
            <div class="wrap-login100">
                <table>
                    <tr>
                        <td colspan="2">
                            @ViewBag.Mesaj
                        </td>
                    </tr>

                </table>
                <form action="/Kullanici/login" method="post"class="login100-form validate-form">
                    <span class="login100-form-title p-b-34">
                        Hesap Giriş
                    </span>
                    <div class="wrap-input100 rs1-wrap-input100 validate-input m-b-20" data-validate="Type user name">
                        <input id="first-name" class="input100" type="text" name="KullaniciAdi" placeholder="Kullanıcı Adı...">
                        <span class="focus-input100"></span>
                    </div>
                    <div class="wrap-input100 rs2-wrap-input100 validate-input m-b-20" data-validate="Type password">
                        <input class="input100" type="password" name="parola" placeholder="Şifre...">
                        <span class="focus-input100"></span>
                    </div>

                    <div class="container-login100-form-btn">
                        <button type="submit"class="login100-form-btn">
                            Giriş Yap
                        </button>
                    </div>
                    
                    <div class="w-full text-center p-t-27 p-b-239">
                        <span class="txt1">
                            Unuttun
                        </span>

                        <a href="javascript:void(0)" id="forgetPass" class="txt2">
                            Kullanıcı Adı / Şifre ?
                        </a>
                        <div class="form-group">

                            <input id="changeName" class="form-control" required="required" disabled="disabled" type="text" name="changeName" placeholder="Kullanıcı Adınız..." style="width: 400px;">

                        </div>

                        <div class="form-group" style="margin-top:20px; float:left;">
                            <button id="resetButton" type="button" class="btn btn-success" disabled="disabled"> Resetle</button>
                        </div>
                    </div>

                    <div class="w-full text-center">
                        <a href="#" class="txt3">
                            Kayıt Ol
                        </a>
                    </div>
                </form>

                <div class="login100-more" style="background-image: url('/Content/js/vendor/logIn/image/bg-01.jpg');">
                  
                </div>
            </div>
        </div>
    </div>
    <script src="~/Scripts/jquery-3.4.1.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>

<script type="text/javascript">
    $("#forgetPass").click(function () {
      

        $("#changeName").prop("disabled", null);
        $("#resetButton").prop("disabled", null);
   
                
        $("#resetButton").click(function () {
            var name = $("#changeName").val();

               
            $.ajax({
                url: "/Kullanici/resetPassword",
                type: "POST",
                data: { changeName: name },
                success: function (data) {
                    alert(data);
                    document.location.replace("/Kullanici/login");
                },
                error: function (data) {
                    alert(data);
                }
            });
        });
       
           
           
    });
</script>


  

</body>
</html>