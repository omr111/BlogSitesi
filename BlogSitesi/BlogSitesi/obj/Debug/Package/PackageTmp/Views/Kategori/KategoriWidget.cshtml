@model IEnumerable<BlogSitesi.Models.Kategori>
@using BlogSitesi.Models

    <div class="widget categories" style="overflow: scroll;max-height: 500px;">
        <h5>Kategoriler</h5>
        <ul>
            @foreach (Kategori kat in Model)
            {
                <li><a href="/Kategori/Index/@kat.id">@kat.Adi (@kat.Makales.Count)</a></li>
            }
        </ul>
    </div>

