@{
    ViewBag.Title = "KullaniciListesi";
}
@using BlogSitesi.Models
@model List<Makale>

<div class="row">
    <div class="col-md-12">
        <div class="block">
            <div class="block-heading">
                <div class="main-text h2">
                    Makale Listesi
                </div>

            </div>
            <div class="block-content-outer">
                <div class="block-content-inner">
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr>


                                <th>Baslik</th>
                                <th>Kategori</th>
                                <th>Ekleyen Yazar</th>
                                <th>YayinTarihi</th>
                                <th>Sil</th>
                                <th>Kilitle</th>

                            </tr>
                        </thead>
                        <tbody>
                            @foreach (Makale m in Model)
                            {

                                <tr>
                                    <td>@m.Baslik</td>
                                    <td>@m.Kategori.Adi</td>

                                    <td>
                                        @m.Kullanici.Nick
                                    </td>
                                    <td>
                                        @m.YayinTarihi
                                    </td>

                                    <td>
                                        <button class="btn btn-danger kulname" data-toggle="modal" data-target="#small-modal" data-kulname="@m.id">

                                            Sil
                                        </button>
                                    </td>
                                    <td>
                                        <button class="btn btn-primary kulname" data-toggle="modal" data-target="#small-modal" data-kulname="@m.id">

                                            Kilitle
                                        </button>
                                    </td>


                                </tr>

                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
