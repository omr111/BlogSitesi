@{
    ViewBag.Title = "Yazar-Listesi";
}
@using BlogSitesi.Models
@model List<Kullanici>

<div class="row">
    <div class="col-md-12">
        <div class="block">
            <div class="block-heading">
                <div class="main-text h2">
                    Yazar Listesi
                </div>

            </div>
            <div class="block-content-outer">
                <div class="block-content-inner">
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr>


                                <th>Ad</th>
                                <th>Soyad</th>
                                <th>Nick</th>
                                <th>Kayıt Tarihi</th>
                                <th>Engelle</th>

                            </tr>
                        </thead>
                        <tbody>
                            @foreach (Kullanici m in Model)
                            {

                                <tr>
                                    <td>@m.Adi</td>
                                    <td>@m.Soyadi</td>

                                    <td>
                                        @m.Nick
                                    </td>
                                    <td>
                                        @m.KayitTarihi
                                    </td>

                                    <td>
                                        <button class="btn btn-danger kulname" data-toggle="modal" data-target="#small-modal" data-kulname="@m.id">

                                            Engelle
                                        </button>
                                    </td>


                                </tr>

                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
