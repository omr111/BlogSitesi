    <script>
        $(document).ready(function () {
            $("a.begen").click(function () {
                var id = $(this).data("makaleid");
                var link = "/Makale/Begen/" + id;
                var begenThis = $(this);
                $.ajax({
                    type: "GET",
                    url: link,
                    success: function (result) {
